<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/screen12"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="20sp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="SOMATIC SYMPTOMS GASTRO-INTESTINAL"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:padding="20sp"

            >
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="None"
                android:id="@+id/rbtnFirst12"
                android:onClick="answerClick"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Loss of appetite but eating without staff encouragement. Heavy feelings in abdomen"
                android:id="@+id/rbtnSecond12"
                android:onClick="answerClick"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:layout_marginTop="10sp"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Difficulty eating without staff urging. Requests or requires laxatives or medication for bowels or medication for gastro-intestinal symptoms"
                android:id="@+id/rbtnThird12"
                android:onClick="answerClick"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:layout_marginTop="10sp"
                />
        </RadioGroup>


    </LinearLayout>

</RelativeLayout>