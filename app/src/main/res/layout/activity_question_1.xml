<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/screen1"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="20sp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="DEPRESSED MOOD (sadness, hopeless, helpless, worthless)"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textAlignment="center"

            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:padding="20sp"

            >
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Absent"
                android:id="@+id/rbtnFirst1"
                android:onClick="answerClick"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="These feeling states indicated only on questioning"
                android:id="@+id/rbtnSecond1"
                android:onClick="answerClick"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:layout_marginTop="10sp"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="These feeling states sponstaneusly reported verbally"
                android:id="@+id/rbtnThird1"
                android:onClick="answerClick"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:layout_marginTop="10sp"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Communicates feeling states non-verbally, i.e. through facial expression, posture, voice and tendency to weep"
                android:id="@+id/rbtnFourh1"
                android:onClick="answerClick"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:layout_marginTop="10sp"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Patient reports virtually only these feeling states in his/her spontaneous verbal and non-verbal communication"
                android:id="@+id/rbtnFifth1"
                android:onClick="answerClick"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:layout_marginTop="10sp"
                />
        </RadioGroup>


    </LinearLayout>

</RelativeLayout>